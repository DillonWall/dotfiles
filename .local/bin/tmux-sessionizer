#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    #selected=$(find ~/work/builds ~/projects ~/ ~/work ~/personal ~/personal/yt -mindepth 1 -maxdepth 1 -type d | fzf)
    selected=$(find -L ~/projects/ -mindepth 1 -maxdepth 1 -type d -exec sh -c 'for f; do if [ -L "$f" ]; then readlink "$f"; else echo "$f"; fi; done' _ {} + | fzf)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
    tmux new-session -s $selected_name -c $selected
    exit 0
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name


